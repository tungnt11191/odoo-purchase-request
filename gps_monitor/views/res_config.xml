<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_gps_monitor_config_settings" model="ir.ui.view">
        <field name="name">view.gps.monitor.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="after">
                <div name="gps_monitor">
                    <h2>Google Maps View</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label string="Configure your Google Maps View"/>
                                <div class="text-muted">
                                    <p>Set API keys and map localization</p>
                                    <span>Visit the <a href="https://developers.google.com/maps/documentation/javascript/localization" target="_blank">page</a> about Localizing the Map</span>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="google_maps_view_api_key" string="Api key"/>
                                        <field name="google_maps_view_api_key"/>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label string="Configure Socket.io server"/>
                                <div class="text-muted">
                                    <p>Socket.io</p>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="socket_io_server" string="Server"/>
                                        <field name="socket_io_server"/>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
