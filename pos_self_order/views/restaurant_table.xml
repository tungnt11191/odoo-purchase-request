<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <data>
        <record model="ir.ui.view" id="pos_self_order_restaurant_table_form">
            <field name="name">Restaurant Table</field>
            <field name="model">restaurant.table</field>
            <field name="inherit_id" ref="pos_restaurant.view_restaurant_table_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="security_code"/>
                    <field name="config_id"/>
                </xpath>
            </field>
        </record>

        <record id="pos_self_order__pos_config_form" model="ir.ui.view">
            <field name="name">pos_self_order.pos.config.form.view.inherit</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page name="table" string="Tables">
                        <field name="table_ids">
                            <tree>
                                <field name="name"/>
                                <field name="security_code"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="pos_self_order_view_pos_order_form" model="ir.ui.view">
            <field name="name">pos_self_order.pos.order.form.view.inherit</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_pos_order_confirm" string="Confirm order" type="object" groups="point_of_sale.group_pos_user" class="btn-primary"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
