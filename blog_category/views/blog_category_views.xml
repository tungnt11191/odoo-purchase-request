<?xml version="1.0"?>
<odoo>
    <data>


        <!-- EVENT.TYPE VIEWS -->
        <record model="ir.ui.view" id="view_blog_post_category_form">
            <field name="name">blog.post.category.form</field>
            <field name="model">blog.post.category</field>
            <field name="arch" type="xml">
                <form string="Category">
                   <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_blog_post_category_tree" model="ir.ui.view">
            <field name="name">blog.post.category.tree</field>
            <field name="model">blog.post.category</field>
            <field name="arch" type="xml">
                <tree string="Categories">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_blog_post_category" model="ir.actions.act_window">
            <field name="name">Category</field>
            <field name="res_model">blog.post.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_blog_post_category_tree"/>
        </record>
        <!-- menu post category -->
        <menuitem action='action_blog_post_category' parent="website_blog.menu_website_blog_root_global" id="menu_blog_post_category" sequence="99"  name="Post Categories"/>


        <!-- menu country -->
        <record id="action_res_country" model="ir.actions.act_window">
            <field name="name">Country</field>
            <field name="res_model">res.country</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="base.view_country_tree"/>
        </record>
        <menuitem action='action_res_country' parent="website_blog.menu_website_blog_root_global" id="menu_res_country" sequence="99"  name="Country"/>

    </data>
</odoo>
