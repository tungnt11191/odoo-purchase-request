<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Slideshow-->
        <menuitem name="Slideshows"
            id="menu_website_slideshow_root"
            sequence="32"
            parent="website.menu_website_configuration"
            groups="website.group_website_designer"/>

        <!-- SLIDE -->
        <record id="s_slide_slide_form_view" model="ir.ui.view">
            <field name="name">s.slide.slide.form</field>
            <field name="model">s.slide.slide</field>
            <field name="arch" type="xml">
                <form string="Slideshow">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                            </group>
                            <group>
                                <field name="source_name" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Sub slide">
                                <field name="sub_slide_ids">
                                    <tree string="Sub slide">
                                        <field name="image"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="s_slide_slide_tree" model="ir.ui.view">
            <field name="name">s.slide.slide.tree</field>
            <field name="model">s.slide.slide</field>
            <field name="arch" type="xml">
                <tree string="Slideshow">
                    <field name="name"/>
                    <field name="source_name"/>
                </tree>
            </field>
        </record>

         <record id="action_s_slide_slide" model="ir.actions.act_window">
            <field name="name">Slide Slide action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">s.slide.slide</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Slide"
            action="action_s_slide_slide"
            id="menu_website_slide_slide_root"
            sequence="32"
            parent="menu_website_slideshow_root"
            groups="website.group_website_designer"/>

        <!--in-site slide-->
        <record id="s_slide_insite_form_view" model="ir.ui.view">
            <field name="name">s.slide.insite.form</field>
            <field name="model">s.slide.insite</field>
            <field name="arch" type="xml">
                <form string="In-site Slide">
                    <sheet>
                        <group>
                            <group>
                                <field name="image"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Layer">
                                <field name="layer_ids">
                                    <tree string="Layer">
                                        <field name="type"/>
                                        <field name="layer_from"/>
                                        <field name="speed"/>
                                        <field name="start_time"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="s_slide_insite_tree" model="ir.ui.view">
            <field name="name">s.slide.insite.tree</field>
            <field name="model">s.slide.insite</field>
            <field name="arch" type="xml">
                <tree string="In-site Slide">
                    <field name="image"/>
                </tree>
            </field>
        </record>

         <record id="action_s_slide_insite" model="ir.actions.act_window">
            <field name="name">In-site Slide action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">s.slide.insite</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Layer -->
        <record id="s_slide_layer_form_view" model="ir.ui.view">
            <field name="name">s.slide.layer.form</field>
            <field name="model">s.slide.layer</field>
            <field name="arch" type="xml">
                <form string="Layer">
                    <sheet>
                        <group>
                            <group>
                                <field name="type"/>
                                <field name="title"  attrs="{'invisible': [('type', '=', 'image')]}"/>
                                <field name="image" attrs="{'invisible': [('type', '=', 'text')]}"/>
                                <field name="image_width" attrs="{'invisible': [('type', '=', 'text')]}"/>
                                <field name="image_height" attrs="{'invisible': [('type', '=', 'text')]}"/>
                                <field name="font_size"  attrs="{'invisible': [('type', '=', 'image')]}"/>
                                <field name="font_style"  attrs="{'invisible': [('type', '=', 'image')]}"/>
                                <field name="font_color"  attrs="{'invisible': [('type', '=', 'image')]}"/>
                            </group>
                            <group>
                                <field name="layer_from"/>
                                <field name="destination_x"/>
                                <field name="destination_y"/>
                                <field name="speed"/>
                                <field name="start_time"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="s_slide_layer_tree" model="ir.ui.view">
            <field name="name">s.slide.layer.tree</field>
            <field name="model">s.slide.layer</field>
            <field name="arch" type="xml">
                <tree string="Layer">
                    <field name="image"/>
                </tree>
            </field>
        </record>

         <record id="action_s_slide_layer" model="ir.actions.act_window">
            <field name="name">Layer action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">s.slide.layer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>

</odoo>
